<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nzf.turbozakat">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".NzfApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuickCheckActivity" />
        <activity
            android:name=".AssetActivity"
            android:windowSoftInputMode="adjustResize|adjustPan|adjustUnspecified" />
        <activity android:name=".CalculateZakatActivity" />
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".SummaryActivity" />
        <activity android:name=".CompileAssetListActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".LearnActivity" />
    </application>

</manifest>